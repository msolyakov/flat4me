@section scripts{
    <script type="text/javascript">
        @{
            var rnd = new Random((int)DateTime.Now.Ticks);
            var bgIndex = rnd.Next(1, 4);
            var bgPath = String.Format("~/Content/f4me/img/bg-{0}.jpg", bgIndex);
        }
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $('.hero').css("background", 'url("@Url.Content(bgPath)") no-repeat;');
            $('.hero').css("background-size", 'cover;');
            $('.hero').css("background-position", '50% 50%;');
            $('.hero').css("height", '100%;');
        });
    </script>
}

<section class="hero">
    <header>
        <div class="wrapper">
            <a href="@Url.Action("Index", "Home")" class="logo-text">
                <div>Квартира для меня</div>
                <div class="fa">beta</div>
            </a>
            <a href="#" class="hamburger"></a>
            <nav>
                <ul>
                    <li><a href="#">Сдать свое жилье</a></li>
                    <li><a href="#">О нас</a></li>
                    <li><a href="#">Контакты</a></li>
                </ul>
                <a href="#" class="login_btn">Войти</a>
            </nav>
        </div>
    </header><!--  end header section  -->

    <section class="caption">
        <h2 class="caption">Flat For Me</h2>
        <h3 class="properties">Близко - Удобно - Комфортно</h3>
        <div class="wrapper">
            <div style="margin-top:25px;">
                <div class="col-md-2">
                    <input id="city" class="form-control text-left" placeholder="Город" type="text" />
                </div>
                <div id="searchDatepicker">
                    <div class="col-md-2">                        
                        <input type="hidden" name="Checkin" />
                        <input id="checkin" class="form-control actual_range text-left" placeholder="Заезд" type="text" />
                    </div>
                    <div class="col-md-2">
                        <input type="hidden" name="Checkout" />
                        <input id="checkout" class="form-control actual_range text-left" placeholder="Выезд" type="text" />
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-control text-left" id="guests">
                        <option value="1">&nbsp;1 гость</option>
                        <option value="2">&nbsp;2 гостя</option>
                        <option value="3">&nbsp;3 гостя</option>
                        <option value="4">&nbsp;4 гостя</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <a href="#" class="login_btn">Найти</a>
                </div>
            </div>
        </div>
    </section>
</section><!--  end hero section  -->
