@model Flat4Me.Web.Portal.Models.PhoneConfirmationViewModel

@{
    ViewBag.Title = "Подтверждение телефона";
}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="col-sm-3 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-3 col-lg-offset-4">
        <div class="well">
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("PhoneConfirmation", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Подтверждение вашего телефона</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-sm-12">
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @placeholder="Введите код из смс здесь" })
                                @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="submit" value="Проверить" class="btn btn-default pull-right" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>